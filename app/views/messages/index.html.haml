.header  グループを作成しました
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name hoge
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            =link_to root_path do
              = fa_icon 'edit'
          %li.side-header__box__menu__edit-user
            =link_to root_path do
              = fa_icon 'cog'
    .groups
      .group
        .group__group-name
          =link_to root_path do
            hogehoge
        .group__group-messages 
          hogehoge
  .chat-main
    .main-header
      .main-header__left-box 
      
        %h2.main-header__left-box__current-group
          hogehoge
        %ul.main-header__left-box__members-list
          Member：
          %li.main-header__left-box__members-list__member 
            hoge

      .main-header__edit-button
        =link_to root_path do
          Edit
    .messages
      .message
        .message__upper-info
          %p.message__upper-info__talker
            hoge
          %p.message__upper-info__time
            2019/10/19(Sat) 11:54:46
        %p.message__text
          hogehoge
    .form
      %form#new_message.new_message{"accept-charset": "UTF-8", action: "/groups/2860/messages", enctype: "multipart/form-data", method: "post"}
        %input{name: "utf8", type: "hidden", value: "✓"}/
        %input{name: "authenticity_token", type: "hidden", value: "Vpd7RMROiQ+4Wk9zu1GmD6RyKRoEWBio/Cxmb6bih1QMUusRRgfrHSkS1LhHn97JAx4Z7kphk7fJM3K6FP6fHA=="}/
        .input-box 
          %input#message_content.input-box__text{name: "message[content]", placeholder: "type a message", type: "text"}/
          %label.input-box__image{for: "message_image"}
            %i.fa.fa-image
            %input#message_image.input-box__image__file{name: "message[image]", type: "file"}/
        %input.submit-button{"data-disable-with": "Send", name: "commit", type: "submit", value: "Send"}/
